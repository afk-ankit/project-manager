generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

enum Department {
  COMPUTER
  ELECTRONICS
  ELECTRICAL
  MECHANICAL
  CIVIL
  FOOD
}

model Student {
  roll_no           String            @id
  year_joining      DateTime
  year_passing      DateTime
  course            String
  department        Department
  semester          Int
  Univeristy        Univeristy        @relation(fields: [univeristy_id], references: [id])
  univeristy_id     Int
  assigned_projects Project[]
  AssignedProject   AssignedProject[]
}

model Professor {
  emp_id            String            @id
  name              String
  department        Department
  assigned_projects AssignedProject[]
}

model Univeristy {
  id      Int       @id @default(autoincrement())
  name    String
  student Student[]
}

model Project {
  id                Int               @id @default(autoincrement())
  title             String
  description       String
  deadline          DateTime
  attachments       ProjectFiles[]
  assigned_to       Student[]
  assigned_projects AssignedProject[]
}

model ProjectFiles {
  id         Int     @id @default(autoincrement())
  url        String
  Project    Project @relation(fields: [project_id], references: [id])
  project_id Int
}

model AssignedProject {
  Student      Student   @relation(fields: [student_id], references: [roll_no])
  student_id   String
  Project      Project   @relation(fields: [project_id], references: [id])
  project_id   Int
  assigned_by  Professor @relation(fields: [professor_id], references: [emp_id])
  professor_id String

  @@id([student_id, project_id])
}
